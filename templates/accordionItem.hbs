<div class="accordion-item{{#if _classes}} {{_classes}}{{/if}}">
    <button class="base accordion-item-title{{#if _isVisited}} visited{{/if}}" aria-expanded="false" aria-label="{{{title}}}">
        <div class="accordion-item-title-inner">
            <div class="accordion-item-title-icon icon icon-plus h5"></div>
            {{{title}}}
        </div>
    </button>
    <div class="accordion-item-body">
        <div class="accordion-item-body-inner">
            <div class="accordion-item-text">
                {{{a11y_text body}}}
            </div>
            {{#if _graphic}}
            {{#if _graphic.src}}
            <div class="accordion-item-graphic">
                <img src="{{_graphic.src}}" aria-label="{{_graphic.alt}}" tabindex="0">
            </div>
            {{#if _graphic.attribution}}
                <div class="graphic-attribution">{{{_graphic.attribution}}}</div>
            {{/if}}
            {{/if}}
            {{/if}}
        </div>
    </div>
</div>
